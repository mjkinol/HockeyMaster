            <Font name="HockeyFont" size="13.0" url="@../../Fonts/HockeyFont.ttf" />
         </font></Button>
      <Button fx:id="playAsGuest" layoutX="142.0" layoutY="508.0" mnemonicParsing="false" onAction="#join" scaleX="2.0" scaleY="2.0" scaleZ="2.0" text="PLAY AS GUEST">
         <font>
            <Font name="HockeyFont" size="13.0" url="@../../Fonts/HockeyFont.ttf" />
         </font>
      </Button>
   </children>
</AnchorPane>
