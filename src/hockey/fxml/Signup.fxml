            <Font name="HockeyFont" size="20.0" url="@../../Fonts/HockeyFont.ttf" />
         </font></Label>
      <Label fx:id="pageTitle" alignment="CENTER" layoutX="152.0" layoutY="132.0" prefHeight="27.0" prefWidth="97.0" scaleX="2.0" scaleY="2.0" scaleZ="2.0" text="Sign Up" textAlignment="CENTER">
